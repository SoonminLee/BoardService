<!doctype html>
<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="/public/style.css" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <title>Hello, world!</title>
</head>

<body>
  <%- include ('nav.html') %>

    <div class="w-50 board-area"style="float: none; margin:0 auto;">
      <table class="table table-hover">
        <thead>
          <tr bgcolor="#BDBDBD" font color="white">
            <th>번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>작성일</th>
          </tr>
        </thead>
        <tbody>
        <% for (let i=0; i < posts.length; i++){ %>
            <tr style="cursor:pointer" onclick="location.href='/NoLogIndetail/<%= posts[i]._id %>'">
              <td><%= num + i %></td>
              <td><%= posts[i].title %></td>
              <td><%= posts[i].userNick %></td>
              <td><%= posts[i].date %></td>
            </tr>
            <% } %>
          </tbody>
      </table>
      <div style="display: flex; justify-content: flex-end;">
      </div>
      <nav aria-label="Page navigation" style="    display: flex;justify-content: center;align-content: center;">
        <ul class="pagination">
          <% for (let i=1; i <= totalPage; i++){ %>
          <li class="page-item"><a class="page-link" href="/?pageNum=<%= i %>&perPage=<%= perPage %>"><%= i %></a></li>
          <% } %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
      // 작성하기 버튼 클릭시 작성페이지로 이동
      $('#PostWrite').click(function(){
        location.replace('/write');
      })

      $('#TitleSearch').click(function(){
        var 입력값 = $('#TitleSearch-input').val()
        console.log('입력값은 = '+입력값);
        window.location.replace(`/search?value=${입력값}`)
      })


    </script>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"></script>
</body>

</html>