<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="/public/style.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <%- include ('nav.html') %>

        <h4>로그인페이지</h4>
        <div class="container">
            <div class="w-50" style="float: none; margin:0 auto;">
                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="id">아이디</label>

                        <input class="form-control" type="text" name="userId" id="userId" />

                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="id">비밀번호</label>
                        <input class="form-control" type="password" name="userPw" />
                    </div>
                    <div>
                        <button class="btn btn-outline-primary btn-sm" type="submit">로그인</button>
                </form>
                <button style="float: right" class="btn btn-outline-danger btn-sm" id="findPw">비밀번호찾기</button>
            </div>
        </div>

        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $("#findPw").click(function () {
                var 아이디 = $('#userId').val()
                if (아이디 === '') {
                    alert('비밀번호 찾고 싶은 아이디를 입력하세요')
                } else {
                    $.ajax({
                        url: "/findPw",
                        type: "POST",
                        data: {
                            아이디: 아이디,
                        },
                        success: function (data) {
                            if (data === "메일발송성공") {
                                alert("메일 발송되었으니 확인하시오")
                                $(location).attr("href", "/login")
                            }
                        }
                    })
                }
            })
        </script>



        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>

</html>